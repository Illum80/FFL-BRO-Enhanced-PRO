                                btn.prop("disabled", false).html("‚ûï Create New Form 4473");
                            }, 3000);
                        } else {
                            btn.prop("disabled", false).html("‚ùå Failed");
                            alert("Error: " + (response.data || "Unknown error"));
                            setTimeout(function() {
                                btn.html("‚ûï Create New Form 4473");
                            }, 3000);
                        }
                    },
                    error: function(xhr, status, error) {
                        btn.prop("disabled", false).html("‚ùå Error");
                        alert("Failed to create form: " + error);
                        setTimeout(function() {
                            btn.html("‚ûï Create New Form 4473");
                        }, 3000);
                    }
                });
            });
        });

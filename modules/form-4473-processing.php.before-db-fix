                var btn = $(this);
                btn.prop("disabled", true).html("‚è≥ Creating...");
                
                $.ajax({
                    url: ajaxurl,
                    type: "POST",
                    data: {
                        action: "fflbro_create_new_4473",
                        nonce: "<?php echo $nonce; ?>"
                    },
                    success: function(response) {
                        if (response.success) {
                            btn.html("‚úÖ Created!");
                            alert("üéâ Form Created Successfully!\n\nForm Number: " + response.data.form_number + "\nForm ID: " + response.data.form_id + "\n\n‚ú® Form saved to database!\nüìù Full editing interface coming in next update.");

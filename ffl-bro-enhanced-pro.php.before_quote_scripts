            'rsr_group' => array('name' => 'RSR Group', 'status' => 'ready'),
            'orion' => array('name' => 'Orion', 'status' => 'ready'),
            'davidsons' => array('name' => 'Davidsons', 'status' => 'ready')
        );
    }
    
